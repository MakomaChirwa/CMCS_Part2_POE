@model CMCS.ViewModels.LoginViewModel
<h2>Login</h2>
<form asp-action="Login" method="post">
    <div><label>Email</label><input asp-for="Email" /></div>
    <div><label>Password</label><input asp-for="Password" type="password" /></div>
    <div><label>Remember me</label><input asp-for="RememberMe" type="checkbox" /></div>
    <input type="hidden" asp-for="ReturnUrl" />
    <button type="submit">Login</button>
</form>
