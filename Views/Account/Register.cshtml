
@model CMCS.Models.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<h2>Register</h2>

<form asp-action="Register" method="post" class="form-card">
    <div class="form-row">
        <label asp-for="Username"></label>
        <input asp-for="Username" />
        <span asp-validation-for="Username" class="field-validation"></span>
    </div>

    <div class="form-row">
        <label asp-for="Password"></label>
        <input asp-for="Password" type="password" />
        <span asp-validation-for="Password" class="field-validation"></span>
    </div>

    <div class="form-row">
        <label asp-for="ConfirmPassword"></label>
        <input asp-for="ConfirmPassword" type="password" />
        <span asp-validation-for="ConfirmPassword" class="field-validation"></span>
    </div>

    <div class="form-row">
        <label asp-for="RoleId"></label>
        <select asp-for="RoleId" asp-items="Model.RolesList" class="role-select">
            <option value="">-- Select Role --</option>
        </select>
        <span asp-validation-for="RoleId" class="field-validation"></span>
    </div>

    <div class="form-row">
        <button type="submit" class="btn-primary">Register</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
